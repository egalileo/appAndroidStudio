<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnCart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A8DADC"
    android:backgroundTint="#2A9D8F"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F1FAEE"
        android:backgroundTint="#ccdbdc"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-106dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/lblX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Ingrese &quot;x&quot; o &quot;Longitud&quot;" />

        <EditText
            android:id="@+id/inputX"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:inputType="number|text|numberDecimal"
            android:textColorHighlight="#457b9d"
            android:textColorLink="#457b9d" />

        <TextView
            android:id="@+id/lblY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Ingrese &quot;y&quot; o &quot;Latitud&quot;" />

        <EditText
            android:id="@+id/inputY"
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:inputType="text|numberDecimal" />

        <TextView
            android:id="@+id/txtZ"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="Ingrese &quot;z&quot; o &quot;Altura elipsoidal&quot;" />

        <EditText
            android:id="@+id/inputZ"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:inputType="text|numberDecimal" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:backgroundTint="#0a1128"
            android:onClick="convertirACartesiana"
            android:text="Geodesicas -> Cartesianas"
            app:strokeColor="#1D3557" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="311dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#0a1128"
            android:onClick="convertirAGeodesica"
            android:text="CARTESIANAS -> GEODESICAS" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtResultado"
            android:layout_width="348dp"
            android:layout_height="139dp"
            android:layout_gravity="bottom|center_horizontal|fill_vertical"
            android:backgroundTint="#A8DADC"
            android:gravity="center_horizontal"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtAlan"
            android:layout_width="346dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="RG16027 - Allan Alexander Ramírez González" />

        <TextView
            android:id="@+id/txtKevin"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="QC18004 - Kevin Steven Quintanilla Cantón" />

        <TextView
            android:id="@+id/txtAdonay"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="MM17015 - Kevin Adonay Mendoza Morales" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>