<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-106dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/lblX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingrese &quot;x&quot; o &quot;Longitud&quot;" />

        <EditText
            android:id="@+id/inputX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/lblY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingrese &quot;y&quot; o &quot;Latitud&quot;" />

        <EditText
            android:id="@+id/inputY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/txtZ"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:text="Ingrese &quot;z&quot; o &quot;ElevaciÃ³n[" />

        <EditText
            android:id="@+id/inputZ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/btnCalcular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="Calcular" />

        <TextView
            android:id="@+id/txtResultado"
            android:layout_width="match_parent"
            android:layout_height="64dp" />

    </LinearLayout>

    <RadioGroup
        android:id="@+id/rgOpcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="635dp"
        android:gravity="center|top"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/btnConversion1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Geo - Cart" />

        <RadioButton
            android:id="@+id/btnConversion2"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:text="Cart - Geo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>